{
  "name": "ngx-if-platform",
  "version": "3.1.1",
  "author": {
    "name": "Dominik Hladík",
    "email": "dominik.hladik@seznam.cz",
    "url": "https://github.com/Celtian"
  },
  "private": false,
  "license": "MIT",
  "description": "Directive for conditional display based on platform",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:demo": "ng build demo --configuration production",
    "build": "ng build ngx-if-platform --configuration production",
    "watch": "ng build ngx-if-platform --watch",
    "test": "ng test",
    "test:jest": "jest",
    "lint": "ng lint",
    "check-circular-dependencies": "madge --circular --ts-config tsconfig.json ./projects/*/src/public-api.ts",
    "script:create-version": "yarn tsx ./scripts/create-version.ts",
    "script:sync-projects": "yarn tsx ./scripts/sync-projects.ts",
    "script:gpr-setup": "yarn tsx ./scripts/gpr-setup.ts",
    "postinstall": "yarn script:create-version",
    "prepare": "husky",
    "version": "yarn script:sync-projects && git add projects/ngx-if-platform/ && auto-changelog -p && git add CHANGELOG.md",
    "postversion": "git push && git push --follow-tags",
    "publish:beta": "yarn && yarn build && npm publish --folder dist --tag beta",
    "release:beta": "npm version prerelease -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛 \"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥 \"",
    "fix-vulnerabilities": "npx yarn-audit-fix && npx browserslist --update-db"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "angular-eslint": "^19.6.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.33.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@angular/language-service": "^20.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-angular": "^19.8.1",
    "@jscutlery/swc-angular-preset": "^0.3.0",
    "@jscutlery/swc-plugin-angular": "^0.11.0",
    "@swc/core": "~1.4.0",
    "@swc/jest": "^0.2.38",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.28.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.5.5",
    "lint-staged": "^16.1.0",
    "madge": "^8.0.0",
    "ng-packagr": "^20.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {},
  "homepage": "https://github.com/Celtian/ngx-if-platform",
  "repository": {
    "url": "git+https://github.com/Celtian/ngx-if-platform.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Celtian/ngx-if-platform/issues"
  },
  "keywords": [
    "angular",
    "ngx",
    "platform"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22 <26",
    "npm": "please-use-yarn"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
